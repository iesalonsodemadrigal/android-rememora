<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_num"
        style="@style/AppLabNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2/5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.iesam.rememora.app.presentation.views.Button3dView
            android:id="@+id/back_button"
            android:layout_width="@dimen/button_3d_menu_2_size"
            android:layout_height="@dimen/button_3d_menu_2_size"
            android:contentDescription="@string/label_buttom_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_previous_mediaplayer"
            app:layout_constraintBottom_toBottomOf="@id/back_button"
            app:layout_constraintEnd_toEndOf="@id/back_button"
            app:layout_constraintStart_toStartOf="@id/back_button"
            app:layout_constraintTop_toTopOf="@id/back_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_buttom_back"
            style="@style/AppSmallTitleButton3D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_buttom_back"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lable_section_back"
            style="@style/AppSmallTitleButton3D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_buttom_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.media3.ui.PlayerView
        android:id="@+id/media_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/spacing_horizontal"
        android:layout_marginBottom="@dimen/spacing_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next_button_action"
        app:layout_constraintStart_toEndOf="@id/back_button_action"
        app:layout_constraintTop_toBottomOf="@id/label_num"
        app:use_controller="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/next_button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.iesam.rememora.app.presentation.views.Button3dView
            android:id="@+id/next_button"
            android:layout_width="@dimen/button_3d_menu_2_size"
            android:layout_height="@dimen/button_3d_menu_2_size"
            android:contentDescription="@string/label_buttom_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_next_mediaplayer"
            app:layout_constraintBottom_toBottomOf="@id/next_button"
            app:layout_constraintEnd_toEndOf="@id/next_button"
            app:layout_constraintStart_toStartOf="@id/next_button"
            app:layout_constraintTop_toTopOf="@id/next_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/label_buttom_next"
            style="@style/AppSmallTitleButton3D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_buttom_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/next_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lable_section_next"
            style="@style/AppSmallTitleButton3D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_buttom_next" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
