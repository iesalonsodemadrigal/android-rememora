<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/bottomButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryContainer"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/spacing_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_mediaplayer_buttons_horizontal">

            <com.iesam.rememora.app.presentation.views.Button3dView
                android:id="@+id/back_button"
                android:layout_width="@dimen/button_3d_size"
                android:layout_height="@dimen/button_3d_size"
                android:contentDescription="@string/label_buttom_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_previous_mediaplayer"
                app:layout_constraintBottom_toBottomOf="@id/back_button"
                app:layout_constraintEnd_toEndOf="@id/back_button"
                app:layout_constraintStart_toStartOf="@id/back_button"
                app:layout_constraintTop_toTopOf="@id/back_button" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppSmallTitleButton3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_buttom_back"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_mediaplayer_buttons_horizontal">

            <com.iesam.rememora.app.presentation.views.Button3dView
                android:id="@+id/pause_button"
                android:layout_width="@dimen/button_3d_size"
                android:layout_height="@dimen/button_3d_size"
                android:contentDescription="@string/label_buttom_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_pause_mediaplayer"
                app:layout_constraintBottom_toBottomOf="@id/pause_button"
                app:layout_constraintEnd_toEndOf="@id/pause_button"
                app:layout_constraintStart_toStartOf="@id/pause_button"
                app:layout_constraintTop_toTopOf="@id/pause_button" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppSmallTitleButton3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_buttom_pause"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pause_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_mediaplayer_buttons_horizontal">

            <com.iesam.rememora.app.presentation.views.Button3dView
                android:id="@+id/play_button"
                android:layout_width="@dimen/button_3d_size"
                android:layout_height="@dimen/button_3d_size"
                android:contentDescription="@string/label_buttom_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_play_mediaplayer"
                app:layout_constraintBottom_toBottomOf="@id/play_button"
                app:layout_constraintEnd_toEndOf="@id/play_button"
                app:layout_constraintStart_toStartOf="@id/play_button"
                app:layout_constraintTop_toTopOf="@id/play_button" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppSmallTitleButton3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_buttom_play"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/play_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/spacing_mediaplayer_buttons_horizontal">

            <com.iesam.rememora.app.presentation.views.Button3dView
                android:id="@+id/next_button"
                android:layout_width="@dimen/button_3d_size"
                android:layout_height="@dimen/button_3d_size"
                android:contentDescription="@string/label_buttom_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_next_mediaplayer"
                app:layout_constraintBottom_toBottomOf="@id/next_button"
                app:layout_constraintEnd_toEndOf="@id/next_button"
                app:layout_constraintStart_toStartOf="@id/next_button"
                app:layout_constraintTop_toTopOf="@id/next_button" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppSmallTitleButton3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_buttom_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/next_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.media3.ui.PlayerView
        android:id="@+id/media_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/label_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomButtonContainer"
        app:use_controller="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/container_volume_buttons"
        android:orientation="vertical"
        android:paddingVertical="@dimen/spacing_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/media_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_volume_buttons_horizontal">

            <com.iesam.rememora.app.presentation.views.Button3dView
                android:id="@+id/volume_up"
                android:layout_width="@dimen/button_3d_size_volume"
                android:layout_height="@dimen/button_3d_size_volume"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/volume_up_vector"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_volume_up"
                app:layout_constraintBottom_toBottomOf="@id/volume_up"
                app:layout_constraintEnd_toEndOf="@id/volume_up"
                app:layout_constraintStart_toStartOf="@id/volume_up"
                app:layout_constraintTop_toTopOf="@id/volume_up" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ic_volume"
                android:layout_width="@dimen/button_3d_size_volume"
                android:layout_height="@dimen/button_3d_size_volume"
                android:src="@drawable/ic_volume"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/volume_up" />

            <com.iesam.rememora.app.presentation.views.Button3dView
                android:id="@+id/volume_down"
                android:layout_width="@dimen/button_3d_size_volume"
                android:layout_height="@dimen/button_3d_size_volume"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ic_volume" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/volume_down_vector"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_volume_down"
                app:layout_constraintBottom_toBottomOf="@id/volume_down"
                app:layout_constraintEnd_toEndOf="@id/volume_down"
                app:layout_constraintStart_toStartOf="@id/volume_down"
                app:layout_constraintTop_toTopOf="@id/volume_down" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_num"
        style="@style/AppLabNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/media_view"
        app:layout_constraintTop_toBottomOf="@id/media_view"
        tools:text="2/5" />

</androidx.constraintlayout.widget.ConstraintLayout>
